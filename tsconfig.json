{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"downlevelIteration": true,
		"baseUrl": ".",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"] // This alias maps `@/` to `src/`, simplifying imports
		},
		"typeRoots": ["./node_modules/@types"]
	},
	"include": [
		"next-env.d.ts",
		"jest-setup.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		".next/types/**/*.ts",
		"middleware.ts",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": ["node_modules", "src/pages", "docs"]
}
